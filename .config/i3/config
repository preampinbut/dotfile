bindsym XF86AudioLowerVolume exec --no-startup-id $HOME/.config/scripts/pactl-set.sh -5% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

bindsym XF86AudioPlay exec --no-startup-id $HOME/.config/scripts/n_spotify_controller.py PlayPause && $refresh_i3status
